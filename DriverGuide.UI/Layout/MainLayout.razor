@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@using DriverGuide.UI.Auth
@using System.Security.Claims

<div class="main-layout">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="images/steering-wheel.svg" width="30" height="30" class="me-2" />
                    DriverGuide
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav me-3">
                        <li class="nav-item"><NavLink class="nav-link" href="">Strona g³ówna</NavLink></li>
                        <li class="nav-item"><NavLink class="nav-link" href="test">Test</NavLink></li>
                        <li class="nav-item"><NavLink class="nav-link" href="wyniki">Wyniki</NavLink></li>
                        <li class="nav-item"><NavLink class="nav-link" href="pytania">Pytania</NavLink></li>
                    </ul>
                    
                    <AuthorizeView>
                        <Authorized>
                            <div class="d-flex align-items-center gap-2">
                                <button class="btn btn-outline-light" @onclick="NavigateToProfile">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @context.User.Identity?.Name
                                </button>
                                <button class="btn btn-danger" @onclick="HandleLogout">
                                    <i class="bi bi-box-arrow-right me-1"></i>
                                    Wyloguj
                                </button>
                            </div>
                        </Authorized>
                        <NotAuthorized>
                            <div class="d-flex">
                                <NavLink class="btn btn-outline-light me-2" href="login">Zaloguj siê</NavLink>
                                <NavLink class="btn btn-warning" href="register">Zarejestruj siê</NavLink>
                            </div>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        @Body
    </main>
</div>

@code {
    private void NavigateToProfile()
    {
        Navigation.NavigateTo("/profile");
    }

    private async Task HandleLogout()
    {
        var authProvider = (ServerAuthenticationStateProvider)AuthStateProvider;
        await authProvider.NotifyUserLogout();
        Navigation.NavigateTo("/", true);
    }
}

<style>
    .main-layout {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background-image: url('images/header.jpg');
        background-size: cover;
        background-position: center;
    }

    main.container {
        flex: 1;
    }

    .hero-banner {
        background-image: url('images/header.jpg');
        background-size: cover;
        background-position: center;
        height: 100%;
        width: 100%;
        margin-bottom: 2rem;
        box-shadow: inset 0 0 0 500px rgba(0,0,0,0.4);
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }
</style>
