@page "/profile"
@using System.Security.Claims
@inject AuthenticationStateProvider AuthStateProvider
@inject HttpClient Http

<AuthorizeView>
    <Authorized>
        <div class="profile-container">
            <div class="profile-header">
                <div class="profile-avatar">
                    <i class="bi bi-person-circle"></i>
                </div>
                <h3 class="profile-name">@userName</h3>
                <p class="profile-email">@userEmail</p>
            </div>

            <div class="profile-content">
                <div class="profile-section">
                    <h5 class="section-title">
                        <i class="bi bi-person-badge me-2"></i>
                        Informacje o koncie
                    </h5>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Login</label>
                            <div class="info-value">@userName</div>
                        </div>
                        <div class="info-item">
                            <label>Email</label>
                            <div class="info-value">@userEmail</div>
                        </div>
                        <div class="info-item">
                            <label>Imiê</label>
                            <div class="info-value">@firstName</div>
                        </div>
                        <div class="info-item">
                            <label>Nazwisko</label>
                            <div class="info-value">@lastName</div>
                        </div>
                        <div class="info-item">
                            <label>Data urodzenia</label>
                            <div class="info-value">@birthDate</div>
                        </div>
                        <div class="info-item">
                            <label>Role</label>
                            <div class="info-value">
                                @foreach (var role in userRoles)
                                {
                                    <span class="badge bg-primary me-1">@role</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="profile-section">
                    <h5 class="section-title">
                        <i class="bi bi-graph-up me-2"></i>
                        Statystyki
                    </h5>
                    @if (_isLoadingStats)
                    {
                        <div class="text-center py-3">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">£adowanie...</span>
                            </div>
                            <p class="text-muted mt-2">£adowanie statystyk...</p>
                        </div>
                    }
                    else if (_totalTests == 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Nie masz jeszcze ¿adnych testów. Rozpocznij swój pierwszy test!
                        </div>
                    }
                    else
                    {
                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="stat-icon bg-primary">
                                    <i class="bi bi-clipboard-check"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value">@_completedTests</div>
                                    <div class="stat-label">Ukoñczone testy</div>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon bg-success">
                                    <i class="bi bi-trophy"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value">@_passedTests</div>
                                    <div class="stat-label">Zaliczone</div>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon bg-danger">
                                    <i class="bi bi-x-circle"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value">@_failedTests</div>
                                    <div class="stat-label">Niezaliczone</div>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon bg-warning">
                                    <i class="bi bi-clock-history"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value">@_incompleteTests</div>
                                    <div class="stat-label">Nieukoñczone</div>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon bg-info">
                                    <i class="bi bi-percent"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value">@GetAverageScoreDisplay()</div>
                                    <div class="stat-label">Œredni wynik</div>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon bg-success">
                                    <i class="bi bi-star-fill"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value">@GetBestScoreDisplay()</div>
                                    <div class="stat-label">Najlepszy wynik</div>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon bg-primary">
                                    <i class="bi bi-check-circle"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value">@GetPassRateDisplay()</div>
                                    <div class="stat-label">WskaŸnik zdawalnoœci</div>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon bg-secondary">
                                    <i class="bi bi-clock"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value">@GetStudyHoursDisplay()</div>
                                    <div class="stat-label">Czas nauki (godz.)</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="profile-section">
                    <h5 class="section-title">
                        <i class="bi bi-gear me-2"></i>
                        Akcje
                    </h5>
                    <div class="action-buttons">
                        <button class="btn btn-outline-primary" @onclick="StartNewTest">
                            <i class="bi bi-play-circle me-2"></i>
                            Rozpocznij test
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="ViewResults">
                            <i class="bi bi-graph-up me-2"></i>
                            Zobacz wyniki
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="text-center mt-5">
            <h3>Musisz byæ zalogowany aby zobaczyæ profil</h3>
            <a href="/login" class="btn btn-primary mt-3">PrzejdŸ do logowania</a>
        </div>
    </NotAuthorized>
</AuthorizeView>
